<!DOCTYPE html>
<html>
<head>
  <title>MomsRecipeBox</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="head">
		<div class="row">
			<div class="col-lg-12">
				<div class="col-lg-6">
					<div class="media">
						<img src="/assets/mrb1.png" class="pull-left media-object"> 
						<h1 style="color: #616d55;">Moms' Recipe Box</h1>
						<p class="muted">proven recipes from the best home cooks in America!</p>
					</div>
				</div>
				<div class="col-lg-4 col-lg-offset-2" style="margin-top:15px;">
					<p class="text-right muted">
						<% if user_signed_in? %>
							<%= link_to('<span class="glyphicon glyphicon-off"> sign out</span>'.html_safe, destroy_user_session_path,  { class: "btn btn-default" , method: :delete }) %><br />
							<small>Signed in as <%= current_user.email %></small> 
						<% else %>
							<%= link_to('<span class="glyphicon glyphicon-off"> sign in</span>'.html_safe, new_user_session_path, { class: "btn btn-default" } ) %> or <%= link_to('<span class="glyphicon glyphicon-user"> register</span>'.html_safe, new_user_registration_path, { class: "btn btn-default" }) %>
						<% end %>
					</p>
				</div>
			</div>
		</div>
		<div class="navbar">
			<ul class="nav navbar-nav">
				<li><%= link_to('<span class="glyphicon glyphicon-home"> home</span>'.html_safe, root_url) %></li>
				<li><%= link_to('<span class="glyphicon glyphicon-list"> all recipes</span>'.html_safe, recipes_path) %></li>
				<li><%= link_to('<span class="glyphicon glyphicon-asterisk"> create recipe</span>'.html_safe, new_recipe_path) %></li>
				<li><a href="#">christmas</a></li> <!-- use glyphicon-gift? -->
				<li><a href="#">quick n easy</a></li> <!-- use glyphicon-time? -->
				<li><a href="#">kids favs</a></li> <!-- use glyphicon-heart? -->
			</ul>
			<form class="navbar-form navbar-left" role="search">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Search">
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
			</form>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Links <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to('<span class="glyphicon glyphicon-info-sign"> about MRB</span>'.html_safe, about_path) %></li>
						<li><%= link_to('<span class="glyphicon glyphicon-lock"> privacy</span>'.html_safe, privacy_path) %></li>
						<li><%= link_to('<span class="glyphicon glyphicon-warning-sign"> legal</span>'.html_safe, legal_path) %></li>
						<li><%= link_to('<span class="glyphicon glyphicon-question-sign"> help</span>'.html_safe, help_path) %></li>
					</ul>
			</ul>                      
		</div>
	</div>	
	
	<div class='container'>
		<%= yield %>
	</div>
	

</body>
</html>
