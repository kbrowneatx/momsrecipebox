<!DOCTYPE html>
<html>
<head>
  <title>MomsRecipeBox</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<!-- Bootstrap theme -->
  <link href="/assets/bootstrap-theme.min.css" rel="stylesheet">
		
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="head">
		<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
			<div class="container">
				<!-- Brand and toggle get grouped for better mobile display -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to('<img src="/assets/mrblogo.png" class="navbarlogo" />  moms recipe box'.html_safe, root_url, { class: "navbar-brand" } ) %>
				</div>
				
				<!-- Collect the nav links, dropdown and login for toggling on mobile displays -->
				<div class="collapse navbar-collapse navbar-ex1-collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to('<span class="glyphicon glyphicon-list"></span> all recipes'.html_safe, recipes_path) %></li>
						<li><%= link_to('<span class="glyphicon glyphicon-asterisk"></span> new recipe'.html_safe, new_recipe_path) %></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-star"></span> Categories <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li class="disabled"><a href="#">quick n easy</a></li> <!-- use glyphicon-time? -->
								<li class="disabled"><a href="#">christmas</a></li> <!-- use glyphicon-gift? -->
								<li class="disabled"><a href="#">kids favs</a></li> <!-- use glyphicon-heart? -->
							</ul>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Commands <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to('<span class="glyphicon glyphicon-info-sign"></span> about MRB'.html_safe, about_path) %></li>
								<li><%= link_to('<span class="glyphicon glyphicon-lock"></span> privacy'.html_safe, privacy_path) %></li>
								<li><%= link_to('<span class="glyphicon glyphicon-warning-sign"></span> legal'.html_safe, legal_path) %></li>
								<li><%= link_to('<span class="glyphicon glyphicon-question-sign"></span> help'.html_safe, help_path) %></li>
								<li role="presentation" class="divider"></li>
								<% if user_signed_in? %>
									<li role="presentation" class="dropdown-header">Signed in: <small><%= current_user.email %></small></li> 
									<li role="presentation"><%= link_to('<span class="glyphicon glyphicon-off"></span> sign out'.html_safe, destroy_user_session_path, { method: :delete }) %></li>
								<% else %>
									<li role="presentation"><%= link_to('<span class="glyphicon glyphicon-off"></span> sign in'.html_safe, new_user_session_path) %></li>
									<li role="presentation" class="dropdown-header">or</li>
									<li role="presentation"><%= link_to('<span class="glyphicon glyphicon-user"></span> register'.html_safe, new_user_registration_path) %></li>
								<% end %>
							</ul>
					</ul>                      
				</div> <!-- .navbar-collapse -->
			</div>
		</nav>
	</div>	

	
	<div class='container'>
		<%= yield %>
	</div>
	
	<div id="footer">
    <div class="container">
        <p class="text-muted credit">Site design courtesy of Twitter-Bootstrap and the hundreds of great designers I cribbed from!</p>
    </div>
  </div>

</body>
</html>
